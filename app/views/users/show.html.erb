<p id="notice"><%= notice %></p>

<h1>Reservados</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Status</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr id="book-<%=book.id%>">
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.code %></td>
        <td><%= link_to 'Quitar de la reserva', not_reserve_path(book.id), method: :patch, remote: true %></td>
        <td><%= link_to 'Comprar', buy_path(book.id), method: :patch, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Comprados</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Status</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="purchased">
    <% @purchased.each do |book| %>
      <tr id="book-<%=book.id%>">
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.code %></td>
        <td><%= link_to 'Borrar', not_buy_path(book.id), method: :patch, remote: true, data: { confirm: "¿Está seguro?\n\nNo le reembolsaremos su dinero" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>