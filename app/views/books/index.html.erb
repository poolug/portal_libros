<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Status</th>
      <th>Code</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @books_available.each do |book| %>
      <tr id="book-<%= book.id %>">
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.code %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Reserve', reserve_path(book.id), method: :patch, remote: true, data: { disable_with: 'Generando reserva...' } %></td>
          <% else %>
          <td><%= link_to 'Reserve', user_session_path %></td>
        <% end %>
        <% if user_signed_in? %>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

